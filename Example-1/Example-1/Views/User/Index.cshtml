@model List<UserModel>

<h2>All users</h2>

@foreach (var user in Model)
{
    <p>
        @if (!string.IsNullOrEmpty(user.AvatarFilePath))
        {
            <img src="~/@user.AvatarFilePath" class="thumb" alt="" />
        }
        @user.Id - @user.FirstName @user.LastName
        <a asp-action="profile" asp-controller="user" asp-route-id="@user.Id" class="btn btn-info">View profile</a>
    </p>
}

<a asp-action="Add" class="btn btn-info">Add user</a>